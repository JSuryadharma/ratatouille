<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".views.customerView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:id="@+id/currentVoucher_area"
        android:elevation="15dp">

        <TextView
            android:id="@+id/currentVoucher_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:text="Hey there! Your currently used voucher is:"
            android:textSize="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="voucher_name"
            android:textSize="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="15dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/currentVoucher_intro"
            android:id="@+id/currentVoucher_name"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_voucher"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:background="@drawable/round_navbar"
        android:elevation="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:id="@+id/menubar_layout">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/figma_home"
                android:id="@+id/navbar_home"
                android:layout_centerInParent="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/navbar_home"
                android:src="@drawable/figma_i"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:id="@+id/navbar_home_i"
                android:visibility="invisible"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/figma_user"
                android:id="@+id/navbar_profile"
                android:layout_centerInParent="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/navbar_profile"
                android:src="@drawable/figma_i"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:id="@+id/navbar_profile_i"
                android:visibility="invisible"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/figma_favourite"
                android:id="@+id/navbar_favourite"
                android:layout_centerInParent="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/navbar_favourite"
                android:src="@drawable/figma_i"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:id="@+id/navbar_favourite_i"
                android:visibility="invisible"/>
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>