<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="15dp"
    android:paddingVertical="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/helpticketdetails_background">
            <TextView
                android:layout_height="10dp"
                android:layout_width="250dp"
                android:text="HelpTicket_ID"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:textSize="10dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:id="@+id/helpticketdetails_title"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Message: "
                android:textSize="18dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:id="@+id/helpticketdetails_message"
                android:layout_marginHorizontal="15dp"
                android:layout_below="@id/helpticketdetails_title"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_below="@id/helpticketdetails_message"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Replied By:"
                android:fontFamily="@font/roboto"
                android:layout_below="@id/helpticketdetails_message"
                android:textSize="15dp"
                android:id="@+id/helpticketdetails_employeeReply"
                android:textColor="@color/black"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>