<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/detail_backButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:elevation="15dp"
                android:focusable="true"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/search_backButton_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/berlinsans"
                    android:text="Back"
                    android:textColor="#808080"
                    android:textSize="20dp" />

            </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/detailPhoto_viewpager"
                android:layout_width="match_parent"
                android:layout_height="211dp" />

            <TextView
                android:id="@+id/resto_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/resto_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Type"
                android:textColor="#808080"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingBarRestoDetails"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="5" />

                <TextView
                    android:id="@+id/resto_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="Details"
                    android:textColor="#2196F3"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/resto_timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Timings"
                    android:textColor="#808080"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DAD9E2"
                    android:text="ADDRESS"
                    android:textColor="#404040"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/resto_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Alamat"
                    android:textColor="#808080"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AVERAGE PRICE"
                    android:background="#DAD9E2"
                    android:textColor="#404040"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/resto_avg_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Rata - rata"
                    android:textColor="#808080"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DAD9E2"
                    android:text="MENU"
                    android:textColor="#404040"
                    android:textSize="17dp" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/menuPhoto_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="211dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bookNowButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="#DAD9E2"
                android:clickable="true"
                android:elevation="15dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/berlinsans"
                    android:text="CONTACT RESTAURANT"
                    android:textColor="@color/black"
                    android:textSize="10pt" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>