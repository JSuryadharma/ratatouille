<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/signup_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textSize="45dp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/roboto_light"
        android:text="Hi, please kindly fill in the form to discover hidden restaurant gems!"
        android:textColor="@android:color/white"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Username"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textedit_background"
                android:alpha="0.7">
                <EditText
                    android:id="@+id/su_username"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/holo_red_light"
                    android:inputType="text"
                    android:layout_marginHorizontal="15dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textedit_background"
                android:alpha="0.7">
                <EditText
                    android:id="@+id/su_email"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:layout_marginHorizontal="15dp"
                    android:textColor="@android:color/holo_red_light"
                    android:inputType="text" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textedit_background"
                android:alpha="0.7">
                <EditText
                    android:id="@+id/su_name"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/holo_red_light"
                    android:inputType="text" />
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textedit_background"
            android:alpha="0.7">
            <EditText
                android:id="@+id/su_password"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="15dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/holo_red_light"
                android:inputType="text" />
        </LinearLayout>
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Show"
            android:fontFamily="@font/roboto"
            android:id="@+id/su_showButton"
            android:textColor="@color/white"
            android:textAlignment="center"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textedit_background"
                android:alpha="0.7">
                <EditText
                    android:id="@+id/su_phone"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_marginHorizontal="15dp"
                    android:background="@android:color/transparent"
                    android:inputType="text" />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textedit_background"
            android:alpha="0.7">
            <EditText
                android:id="@+id/su_address"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginHorizontal="15dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/holo_red_light"
                android:inputType="textMultiLine" />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="15dp"
            android:fontFamily="@font/roboto"
            android:layout_marginRight="20dp"
            android:id="@+id/su_backButton"
            android:textColor="@color/white"
            android:clickable="true"/>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/round_button"
            android:gravity="center"
            android:id="@+id/su_signUpButton"
            android:elevation="15dp"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textSize="20dp"
                android:textColor="@android:color/holo_red_light"
                android:fontFamily="@font/roboto_bold"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>