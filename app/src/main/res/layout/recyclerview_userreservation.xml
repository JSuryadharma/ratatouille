<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="15dp"
    android:paddingVertical="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/reservations_background"
            android:orientation="vertical"
            android:id="@+id/reservationsrv_area">

            <TextView
                android:layout_height="10dp"
                android:layout_width="250dp"
                android:text="Reservation_ID"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:textSize="10dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:id="@+id/userReservationReservationID"/>

            <TextView
                android:id="@+id/userReservationRestoName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto"
                android:text="Restaurant:"
                android:textColor="@color/black"
                android:textSize="18dp" />
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Seats: "
                android:textSize="18dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:id="@+id/userReservationSeat"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textSize="18dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:id="@+id/userReservationDate"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:textSize="18dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:id="@+id/userReservationDesc"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/userReservationStatus"
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto"
                android:text="Status:"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>