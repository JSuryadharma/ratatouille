<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/vp_background"
        android:paddingHorizontal="10dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/fp_backbutton"
            android:clickable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_backbutton"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:fontFamily="@font/roboto_bold"
                android:textSize="20dp"
                android:textColor="#666666"
                android:layout_gravity="center_vertical"
                android:id="@+id/fp_backbutton_text"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:fontFamily="@font/roboto_bold"
        android:paddingTop="80dp"
        android:paddingHorizontal="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email address below and we'll send you an email with instructions on how to change your password"
        android:textSize="17dp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@android:color/black"
        android:paddingHorizontal="50dp"
        android:paddingTop="10dp"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/searchbox_background"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:elevation="15dp"
        android:clickable="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:background="@android:color/transparent"
            android:hint="Enter your email"
            android:textColorHint="@android:color/holo_red_light"
            android:fontFamily="@font/roboto_light"
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/fp_input"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:id="@+id/fp_button"
        android:background="@drawable/round_button"
        android:elevation="15dp"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>