<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reviewpage_refresh">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/vp_background"
                android:paddingHorizontal="20dp"
                android:paddingTop="40dp">

                <LinearLayout
                    android:id="@+id/search_backButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:elevation="15dp"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/reviewPageBackButton"
                        android:layout_width="39dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_backbutton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reviews"
                        android:fontFamily="@font/heebo_bold"
                        android:textColor="@android:color/black"
                        android:textSize="40dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:background="@drawable/round_card"
                android:layout_marginHorizontal="15dp"
                android:elevation="15dp"
                android:padding="15dp">

                <TextView
                    android:id="@+id/reviewpage_restaurant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Restaurant_Name"
                    android:fontFamily="@font/heebo_bold"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reviewpage_restaurant_name"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="74dp"
                    android:text="Zomato Score"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reviewpage_restaurant_name"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="63dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/reviewpage_zomato_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:textColor="@android:color/black"
                        android:textSize="40dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" /5"
                        android:textColor="@android:color/black"
                        android:textSize="20dp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_baseline_star_24" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="15dp"
                    android:text="Overall Score"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reviewpage_restaurant_name"
                    android:layout_marginLeft="235dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/reviewpage_overall_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:textColor="@android:color/black"
                        android:textSize="40dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" /5"
                        android:textColor="@android:color/black"
                        android:textSize="20dp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_baseline_star_24" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:background="@drawable/round_card"
                android:layout_marginHorizontal="15dp"
                android:elevation="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mask Rate"
                        android:textSize="15dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_alignParentLeft="true"/>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="1dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:id="@+id/reviewpage_maskRatingBar"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Rate             "
                        android:textSize="15dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_alignParentLeft="true"/>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="1dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:id="@+id/reviewpage_tempRatingBar"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sanitation Rate                  "
                        android:textSize="15dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_alignParentLeft="true"/>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="1dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:id="@+id/reviewpage_sanitationRatingBar"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Social Distancing Rate      "
                        android:textSize="15dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_alignParentLeft="true"/>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="1dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:id="@+id/reviewpage_socialDistRatingBar"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Physical Barrier Rate         "
                        android:textSize="15dp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_alignParentLeft="true"/>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="5"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="1dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:id="@+id/reviewpage_physicalBarRatingBar"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_card"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:elevation="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/heebo_bold"
                        android:text="Reviews"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="30dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="10dp"
                        android:layout_alignParentLeft="true"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:paddingHorizontal="25dp"
                        android:layout_marginVertical="15dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/reviewpage_addButton">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/berlinsans"
                            android:text="+"
                            android:textColor="@color/black"
                            android:textSize="21dp" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/reviewpage_recyclerView"
                    android:layout_margin="15dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>